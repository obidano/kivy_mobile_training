<LoginScreen>:
    MDFloatLayout:
        md_bg_color: utils.get_color_from_hex("#ffffff")
        MDBoxLayout:
            orientation: "vertical"
            padding: dp(30)
            Widget:
                size_hint: 1, None
                height: dp(50)
            Image:
                source: "images/lock_icon.png"
                size_hint: 1, None
                height: dp(100)
#                size_hint: 0.5, 0.2
#                pos_hint: {"center_x": 0.5}
            Widget:
                size_hint: 1, None
                height: dp(50)
            MDLabel:
                text: "[size=38sp][b]Connexion[/b][/size]"
                markup: True
                halign: "center"
                size_hint: 1, None
                height: dp(40)
            MDLabel:
                text: "[size=15sp]Plateforme pour CP[/size]"
                markup: True
                halign: "center"
                size_hint: 1, None
                height: dp(21)
            Widget:
                size_hint: 1, None
                height: dp(20)
            MDTextField:
                mode: "rectangle"
                on_text: root.saisie_username(self.text)
                hint_text: "Nom d'utilisateur"
                icon_left: "account-box-outline"
            Widget:
                size_hint: 1, None
                height: dp(20)
            MDTextField:
                mode: "rectangle"
                on_text: root.saisie_mot_passe(self.text)
                hint_text: "Mot de passe"
                password: True
                icon_left: "lock"

            Widget:
                size_hint: 1, None
                height: dp(30)

            MDFlatButton:
                theme_width: "Custom"
                size_hint: 1, None
                padding: dp(0),dp(20),dp(0),dp(20)
                md_bg_color: utils.get_color_from_hex("#023e8a")
                line_color: utils.get_color_from_hex("#023e8a")
                on_release: root.valider()
                theme_text_color: "Custom"
                text_color: "white"
                text: "Confirmer"
                pos_hint: {"center_x": 0.5, "center_y": 0.5}


            Widget:
